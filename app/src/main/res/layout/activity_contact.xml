<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<include
    layout="@layout/toolbarback"
    android:id="@+id/toolbar"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/real_estate_main"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/socialcheck"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="50dp"
    android:id="@+id/images"
    app:civ_border_width="2dp"
    android:layout_centerHorizontal="true"
    app:civ_border_color="@color/primaryTextColor"
    android:src="@drawable/ic_reward"
    android:layout_height="50dp"/>


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
  android:layout_marginStart="10dp"
    android:layout_marginRight="10dp"
    android:elevation="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="40dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">


        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="10dp"
            android:layout_marginBottom="5dp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/rect">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textColor="#000000"
               android:fontFamily="@font/main_font"
               android:text="Deepika Kushwaha"
               android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/main_font"
                android:text="Meet Your Dream House"
                android:gravity="center_horizontal" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/logo"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/logo"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/logo"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/logo"
        android:layout_height="50dp"/>
</LinearLayout>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>
<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

</LinearLayout>
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularbordersolid"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/socialcheck"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/UserMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="+91 7906086236"
                    android:textSize="15sp"
                    android:autoLink="phone"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primaryTextColor"
                    android:text="indoworks2017@gmail.com"
                    android:textSize="15sp"
                    android:autoLink="email"
                    android:fontFamily="@font/main_font"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingRight="8dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primaryTextColor"
                    android:text="Address"
                    android:textSize="15sp"
                    android:autoLink="map"
                    android:fontFamily="@font/main_font"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:autoLink="web"
                    android:fontFamily="@font/main_font"
                    android:text="http://ecoosa.com/"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>